{
  "name": "@toon-format/monorepo",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.21.0",
  "scripts": {
    "build": "pnpm -r --filter=./packages/** run build",
    "automd": "automd",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "pnpm -r test",
    "test:types": "tsc --noEmit",
    "conformance": "cd conformance && node cli.mjs",
    "conformance:report": "cd conformance && node cli.mjs --report --output ../conformance-results",
    "release": "bumpp -r"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@types/node": "^24.10.0",
    "automd": "^0.4.2",
    "bumpp": "^10.3.1",
    "eslint": "^9.39.1",
    "tsdown": "^0.16.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
